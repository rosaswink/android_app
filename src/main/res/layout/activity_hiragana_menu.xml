<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rosa.japanese101.hiraganaMenuActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        app:srcCompat="@drawable/hiragana"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="72dp"
        android:background="@color/colorAccent"
        android:text="a"
        android:onClick="aHiragana"
        android:textColor="#fa5bba"
        android:textSize="20sp" />

    <Button
        android:id="@+id/i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/a"
        android:layout_alignBottom="@+id/a"
        android:layout_centerHorizontal="true"
        android:background="#5EBBD7F9"
        android:textColor="#FF7DB9FD"
        android:text="i"
        android:onClick="more"
        android:enabled="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/i"
        android:layout_alignBottom="@+id/i"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        android:background="#5EBBD7F9"
        android:textColor="#FF7DB9FD"
        android:text="u"
        android:enabled="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/e"
        android:layout_alignBottom="@+id/e"
        android:layout_marginStart="32dp"
        android:layout_toEndOf="@+id/e"
        android:background="#5EBBD7F9"
        android:textColor="#FF7DB9FD"
        android:text="o"
        android:enabled="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_below="@+id/a"
        android:layout_marginTop="31dp"
        android:background="#5EBBD7F9"
        android:textColor="#FF7DB9FD"
        android:text="e"
        android:enabled="false"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/a"
        android:layout_marginBottom="12dp"
        android:background="@null"
        android:onClick="previous" />

</RelativeLayout>
